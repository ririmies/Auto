@page
@model Auto.Pages.Garages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Garages</h1>

<p>
    <a asp-page="Create">Add new garage</a>
</p>
<table class="table bg-garage-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Garage[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Garage[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Garage) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
