@page
@model Auto.Pages.Parts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Car Parts</h1>

<p>
    <a asp-page="Create">Add new part</a>
</p>
<table class="table bg-parts-table" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Part[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Part[0].Price)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Part[0].Programare)*@
                Appointment Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Part) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Programare.Date)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
